extends ../layout

block content
    include registry-nav.pug

    div(class="container")
        h3= title
        form(
            method="POST",
            action="/customers")
            input(
                type="hidden",
                name="_csrf",
                value=csrfToken)
            div(class="form-group row")
                label(
                    for="new-item-name",
                    class="col-form-label col-sm-3"
                ) Добавить новую запись
                div(class="col-sm-3")
                    input(
                        id="new-item-name",
                        type="text",
                        class="form-control",
                        name="name",
                        value="",
                        placeholder="Название",
                        required)
                div(class="col-sm-3")
                    input(
                        type="text",
                        class="form-control",
                        name="address",
                        value="",
                        placeholder="Адрес",
                        required)
                div(class="col-sm-3")
                        button(
                            class="btn btn-primary",
                            type="submit"
                        ) Добавить

        ul(class="list-group")
            each item in data
                li(class="list-group-item d-flex align-items-center")
                    div(class="row flex-grow-1")
                        div(class="col-sm-5")= item.name
                        div(class="col-sm-7")= item.address
                    a(
                        href="/customers/" + item.id,
                        class="btn btn-success btn-action")
                        i(class="fas fa-edit")
                    form(
                        method="POST",
                        action="/customers?_method=DELETE")
                        input(
                            type="hidden",
                            name="_csrf",
                            value=csrfToken)
                        input(
                            type="hidden",
                            name="id",
                            value=item.id)
                        button(
                            class="btn btn-danger btn-action",
                            type="submit")
                            i(class="fas fa-trash-alt")