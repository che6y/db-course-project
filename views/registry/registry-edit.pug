extends ../layout

block content
    include registry-nav.pug

    div(class="container")
        h3= title
        if message
            div.alert(class='alert-danger')= message

        form(
            method="POST",
            action="/registry?_method=PUT")
            input(
                type="hidden",
                name="_csrf",
                value=csrfToken)
            input(
                type="hidden",
                name="id",
                value=data[0][0].id)

            div(class="row")
                div(class="form-group col-sm-6")
                    label(for="registry-number") Номер документа приема проб
                    input(
                        id="registry-number",
                        type="text",
                        class="form-control",
                        name="registryId",
                        value= data[0][0].registry_id,
                        required)
                div(class="form-group col-sm-6")
                    label(for="name") Наименование Исследуемого материала
                    input(
                        id="name",
                        type="text",
                        class="form-control",
                        name="name",
                        value= data[0][0].name,
                        required)
                div(class="form-group col-sm-6")
                    label(for="type-of-check") Вид проверки
                    select(
                        id="type-of-check",
                        class="form-control",
                        name="typeId")
                        each item in data[1]
                            option(
                                selected=(data[0][0]['type_id'] === item.id),
                                value= item.id,
                                class="form-control"
                            )=item.name
                div(class="form-group col-sm-6")
                    label(for="test") Исследование
                    select(
                        id="test",
                        class="form-control",
                        name="testId")
                        each item in data[2]
                            option(
                                selected=( data[0][0]['test_id'] === item.id ),
                                value=item.id,
                                class="form-control"
                            )=item.name
                div(class="form-group col-sm-6")
                    label(for="customer") Заказчик
                    select(
                        id="customer",
                        class="form-control",
                        name="customerId")
                        each item in data[3]
                            option(
                                selected=( data[0][0]['customer_id'] === item.id ),
                                value=item.id,
                                class="form-control"
                            )=item.name
                div(class="form-group col-sm-6")
                    label(for="staff") Принял
                    select(
                        id="staff",
                        class="form-control",
                        name="staffId")
                        each item in data[4]
                            option(
                                selected=( data[0][0]['staff_id'] === item.id ),
                                value=item.id,
                                class="form-control"
                            )= item.surname + " " + item.name.substring(0,1) + "." + item.fathers_name.substring(0,1)
                div(class="form-group col-sm-12")
                    button(
                        class="btn btn-primary",
                        type="submit"
                    ) Сохранить
                    a(href="javascript:history.back()", class="btn btn-secondary") Отменить
